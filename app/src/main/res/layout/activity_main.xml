<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/start"
            android:layout_width="258dp"
            android:layout_height="46dp"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="116dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp" android:textStyle="bold"
            android:onClick="startPullup"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="83dp" android:layout_marginBottom="65dp"
            app:layout_constraintBottom_toTopOf="@+id/button3" app:layout_constraintHorizontal_bias="0.652"
            app:layout_constraintVertical_bias="0.404"/>

    <Button
            android:id="@+id/connectButt"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:onClick="connectToBluetooth"
            android:text="@string/connect_to_bluetooth"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="41dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/bluetoothText"/>


    <TextView
            android:id="@+id/bluetoothText"
            android:layout_width="349dp"
            android:layout_height="193dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/connectButt"/>
    <Button
            android:text="@string/getcount"
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:id="@+id/button3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/getCount" android:layout_marginEnd="38dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="55dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" android:onClick="buttTouch"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="165dp"
            android:layout_height="73dp"
            android:id="@+id/getCount"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="51dp" android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginBottom="59dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:text="@string/stop"
            android:layout_width="261dp"
            android:layout_height="57dp"
            android:id="@+id/button2"
            android:layout_marginTop="256dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp" android:textStyle="bold"
            android:onClick="stopPullup"
            android:layout_marginEnd="72dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="29dp"
            app:layout_constraintBottom_toTopOf="@+id/connectButt" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>